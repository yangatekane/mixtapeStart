<p id="notice"><%= notice %></p>


<audio src =<%= "/tracks/#{@track.filename}"%>  autoplay ="autoplay" controls ="controls">
	
Your broswer does not have HTML 5 support
</audio>

<p><strong><%=@track.name%></strong> Posted by<%= link_to(@track.artist.username,@track.artist) %></p>


<%if artist_signed_in?%>
    <%=form_tag({:controller => :tracks,:action =>:create_comment,:id=>@track.id},{:method => :post}) do |f|%>
   <%=text_area_tag :comment%>
   <%=submit_tag "Comment"%>
<%end%>
<%end%>
   
    <% unless  @track.comments.empty?%>
     <% comments = @track.comments.recent.limit(10).all%>
     <%comments.each do |c|%>
     
         <div id ="comments">
         	<%=image_tag(picture(c.artist),:size =>"50x50")%>
         	<p id ="comment-text"> <strong><%=c.artist.username%></strong>
            <%= c.comment%><br/>
                
            </p>
            <p>
           <%=c.created_at%> ago
          </p>
        </div>
        <%end%>

    <%end%>